# Pricing Recommendation Agent Configuration
# Copy this file to config.toml and fill in your credentials

# =============================================================================
# LLM Provider Configuration
# =============================================================================

[llm]
# Choose your LLM provider: "openai" or "bedrock"
provider = "openai"

# =============================================================================
# OpenAI Configuration
# =============================================================================

[llm.openai]
# Your OpenAI API key (required if llm.provider = "openai")
api_key = "your-openai-api-key-here"

# OpenAI model to use
model = "gpt-3.5-turbo"

# OpenAI generation parameters
max_tokens = 500
temperature = 0.7

# =============================================================================
# AWS Bedrock Configuration
# =============================================================================

[llm.bedrock]
# AWS credentials (required if llm.provider = "bedrock")
aws_access_key_id = "your-aws-access-key-id-here"
aws_secret_access_key = "your-aws-secret-access-key-here"
aws_region = "us-east-1"

# Bedrock model to use
model_id = "anthropic.claude-3-sonnet-20240229-v1:0"

# Bedrock generation parameters
max_tokens = 500
temperature = 0.7
top_p = 0.9

# =============================================================================
# Server Configuration
# =============================================================================

[server]
# MCP server URL
api_base_url = "http://localhost:8000"

# API timeout in seconds
api_timeout = 30

# Health check interval in seconds
health_check_interval = 5

# =============================================================================
# Streamlit UI Configuration
# =============================================================================

[streamlit]
# Page configuration
page_title = "Pricing Recommendation Agent"
page_icon = "ðŸ“Š"
layout = "wide"
initial_sidebar_state = "expanded"

# =============================================================================
# Chat Configuration
# =============================================================================

[chat]
# System message for the AI assistant
system_message = """
You are an AI assistant for a pricing recommendation agent in the travel industry. 
You help revenue management teams understand pricing optimization opportunities and provide insights.

Your role is to:
1. Analyze pricing data and recommendations
2. Explain statistical findings in business terms
3. Suggest actions based on recommendations
4. Answer questions about profitability, volume, availability, and inventory
5. Provide context and insights for decision-making

Be helpful, professional, and focus on actionable insights.
"""

