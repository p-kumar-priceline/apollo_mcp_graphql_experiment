# Pricing Recommendation Agent Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Choose your LLM provider: "openai" or "bedrock"
LLM_PROVIDER=openai

# =============================================================================
# OpenAI Configuration
# =============================================================================

# Your OpenAI API key (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI model to use
OPENAI_MODEL=gpt-3.5-turbo

# OpenAI generation parameters
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# =============================================================================
# AWS Bedrock Configuration
# =============================================================================

# AWS credentials (required if LLM_PROVIDER=bedrock)
AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
AWS_DEFAULT_REGION=us-east-1

# Bedrock model to use
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Bedrock generation parameters
BEDROCK_MAX_TOKENS=500
BEDROCK_TEMPERATURE=0.7
BEDROCK_TOP_P=0.9

# =============================================================================
# Server Configuration
# =============================================================================

# MCP server URL
API_BASE_URL=http://localhost:8000

# API timeout in seconds
API_TIMEOUT=30

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=5

# =============================================================================
