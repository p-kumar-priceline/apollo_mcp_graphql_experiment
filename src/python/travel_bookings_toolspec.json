{
    "name": "TravelBookings",
    "version": "1.0.0",
    "description": "Travel Bookings MCP Server with async SQLite backend for managing travel bookings, customers, hotels, and flights data",
    "tools": [
        {
            "name": "create_customer",
            "description": "Create a new customer",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "first_name": {
                        "type": "string",
                        "description": "Customer's first name"
                    },
                    "last_name": {
                        "type": "string",
                        "description": "Customer's last name"
                    },
                    "email": {
                        "type": "string",
                        "description": "Customer's email address (must be unique)"
                    },
                    "phone": {
                        "type": "string",
                        "description": "Customer's phone number (optional)"
                    }
                },
                "required": [
                    "first_name",
                    "last_name",
                    "email"
                ]
            },
            "outputSchema": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "customer_id": {
                        "type": "integer",
                        "description": "ID of the created customer"
                    },
                    "message": {
                        "type": "string",
                        "description": "Success message"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if operation failed"
                    }
                }
            }
        },
        {
            "name": "get_customers",
            "description": "Get all customers with optional limit",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "limit": {
                        "type": "integer",
                        "description": "Maximum number of customers to return",
                        "default": 10
                    }
                }
            },
            "outputSchema": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer",
                            "description": "Customer ID"
                        },
                        "first_name": {
                            "type": "string",
                            "description": "Customer's first name"
                        },
                        "last_name": {
                            "type": "string",
                            "description": "Customer's last name"
                        },
                        "email": {
                            "type": "string",
                            "description": "Customer's email address"
                        },
                        "phone": {
                            "type": "string",
                            "description": "Customer's phone number"
                        },
                        "created_at": {
                            "type": "string",
                            "description": "Customer creation timestamp"
                        }
                    }
                }
            }
        },
        {
            "name": "search_hotels",
            "description": "Search hotels by city, minimum rating, and maximum price",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "city": {
                        "type": "string",
                        "description": "City to search hotels in (optional)"
                    },
                    "min_rating": {
                        "type": "number",
                        "description": "Minimum hotel rating (optional)"
                    },
                    "max_price": {
                        "type": "number",
                        "description": "Maximum price per night (optional)"
                    }
                }
            },
            "outputSchema": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer",
                            "description": "Hotel ID"
                        },
                        "name": {
                            "type": "string",
                            "description": "Hotel name"
                        },
                        "city": {
                            "type": "string",
                            "description": "Hotel city"
                        },
                        "country": {
                            "type": "string",
                            "description": "Hotel country"
                        },
                        "rating": {
                            "type": "number",
                            "description": "Hotel rating"
                        },
                        "price_per_night": {
                            "type": "number",
                            "description": "Price per night"
                        },
                        "amenities": {
                            "type": "string",
                            "description": "Hotel amenities (comma-separated)"
                        }
                    }
                }
            }
        },
        {
            "name": "search_flights",
            "description": "Search flights by departure city, arrival city, and maximum price",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "departure_city": {
                        "type": "string",
                        "description": "Departure city (optional)"
                    },
                    "arrival_city": {
                        "type": "string",
                        "description": "Arrival city (optional)"
                    },
                    "max_price": {
                        "type": "number",
                        "description": "Maximum flight price (optional)"
                    }
                }
            },
            "outputSchema": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer",
                            "description": "Flight ID"
                        },
                        "airline": {
                            "type": "string",
                            "description": "Airline name"
                        },
                        "flight_number": {
                            "type": "string",
                            "description": "Flight number"
                        },
                        "departure_city": {
                            "type": "string",
                            "description": "Departure city"
                        },
                        "arrival_city": {
                            "type": "string",
                            "description": "Arrival city"
                        },
                        "departure_time": {
                            "type": "string",
                            "description": "Departure time"
                        },
                        "arrival_time": {
                            "type": "string",
                            "description": "Arrival time"
                        },
                        "price": {
                            "type": "number",
                            "description": "Flight price"
                        },
                        "aircraft_type": {
                            "type": "string",
                            "description": "Aircraft type"
                        }
                    }
                }
            }
        },
        {
            "name": "create_hotel_booking",
            "description": "Create a new hotel booking",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "customer_id": {
                        "type": "integer",
                        "description": "Customer ID"
                    },
                    "hotel_id": {
                        "type": "integer",
                        "description": "Hotel ID"
                    },
                    "check_in_date": {
                        "type": "string",
                        "description": "Check-in date (YYYY-MM-DD format)"
                    },
                    "check_out_date": {
                        "type": "string",
                        "description": "Check-out date (YYYY-MM-DD format)"
                    },
                    "guests": {
                        "type": "integer",
                        "description": "Number of guests",
                        "default": 1
                    }
                },
                "required": [
                    "customer_id",
                    "hotel_id",
                    "check_in_date",
                    "check_out_date"
                ]
            },
            "outputSchema": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "booking_id": {
                        "type": "integer",
                        "description": "ID of the created booking"
                    },
                    "total_amount": {
                        "type": "number",
                        "description": "Total booking amount"
                    },
                    "message": {
                        "type": "string",
                        "description": "Success message"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if operation failed"
                    }
                }
            }
        },
        {
            "name": "create_flight_booking",
            "description": "Create a new flight booking",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "customer_id": {
                        "type": "integer",
                        "description": "Customer ID"
                    },
                    "flight_id": {
                        "type": "integer",
                        "description": "Flight ID"
                    },
                    "guests": {
                        "type": "integer",
                        "description": "Number of passengers",
                        "default": 1
                    }
                },
                "required": [
                    "customer_id",
                    "flight_id"
                ]
            },
            "outputSchema": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "booking_id": {
                        "type": "integer",
                        "description": "ID of the created booking"
                    },
                    "total_amount": {
                        "type": "number",
                        "description": "Total booking amount"
                    },
                    "message": {
                        "type": "string",
                        "description": "Success message"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if operation failed"
                    }
                }
            }
        },
        {
            "name": "get_bookings",
            "description": "Get bookings with optional filters for customer_id and status",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "customer_id": {
                        "type": "integer",
                        "description": "Filter by customer ID (optional)"
                    },
                    "status": {
                        "type": "string",
                        "description": "Filter by booking status (optional)",
                        "enum": [
                            "pending",
                            "confirmed",
                            "cancelled"
                        ]
                    },
                    "limit": {
                        "type": "integer",
                        "description": "Maximum number of bookings to return",
                        "default": 10
                    }
                }
            },
            "outputSchema": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer",
                            "description": "Booking ID"
                        },
                        "customer_id": {
                            "type": "integer",
                            "description": "Customer ID"
                        },
                        "booking_type": {
                            "type": "string",
                            "description": "Type of booking",
                            "enum": [
                                "hotel",
                                "flight",
                                "package"
                            ]
                        },
                        "hotel_id": {
                            "type": "integer",
                            "description": "Hotel ID (if applicable)"
                        },
                        "flight_id": {
                            "type": "integer",
                            "description": "Flight ID (if applicable)"
                        },
                        "check_in_date": {
                            "type": "string",
                            "description": "Check-in date"
                        },
                        "check_out_date": {
                            "type": "string",
                            "description": "Check-out date"
                        },
                        "guests": {
                            "type": "integer",
                            "description": "Number of guests"
                        },
                        "total_amount": {
                            "type": "number",
                            "description": "Total booking amount"
                        },
                        "status": {
                            "type": "string",
                            "description": "Booking status"
                        },
                        "booking_date": {
                            "type": "string",
                            "description": "Booking creation date"
                        },
                        "first_name": {
                            "type": "string",
                            "description": "Customer first name"
                        },
                        "last_name": {
                            "type": "string",
                            "description": "Customer last name"
                        },
                        "email": {
                            "type": "string",
                            "description": "Customer email"
                        },
                        "hotel_name": {
                            "type": "string",
                            "description": "Hotel name (if applicable)"
                        },
                        "hotel_city": {
                            "type": "string",
                            "description": "Hotel city (if applicable)"
                        },
                        "airline": {
                            "type": "string",
                            "description": "Airline name (if applicable)"
                        },
                        "flight_number": {
                            "type": "string",
                            "description": "Flight number (if applicable)"
                        },
                        "departure_city": {
                            "type": "string",
                            "description": "Departure city (if applicable)"
                        },
                        "arrival_city": {
                            "type": "string",
                            "description": "Arrival city (if applicable)"
                        }
                    }
                }
            }
        },
        {
            "name": "update_booking_status",
            "description": "Update booking status (pending, confirmed, cancelled)",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "booking_id": {
                        "type": "integer",
                        "description": "Booking ID to update"
                    },
                    "status": {
                        "type": "string",
                        "description": "New booking status",
                        "enum": [
                            "pending",
                            "confirmed",
                            "cancelled"
                        ]
                    }
                },
                "required": [
                    "booking_id",
                    "status"
                ]
            },
            "outputSchema": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "description": "Whether the operation was successful"
                    },
                    "message": {
                        "type": "string",
                        "description": "Success message"
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if operation failed"
                    }
                }
            }
        },
        {
            "name": "get_booking_statistics",
            "description": "Get booking statistics and analytics",
            "inputSchema": {
                "type": "object",
                "properties": {}
            },
            "outputSchema": {
                "type": "object",
                "properties": {
                    "bookings_by_type": {
                        "type": "object",
                        "description": "Count of bookings by type",
                        "additionalProperties": {
                            "type": "integer"
                        }
                    },
                    "bookings_by_status": {
                        "type": "object",
                        "description": "Count of bookings by status",
                        "additionalProperties": {
                            "type": "integer"
                        }
                    },
                    "total_revenue": {
                        "type": "number",
                        "description": "Total revenue from confirmed bookings"
                    },
                    "average_booking_amount": {
                        "type": "number",
                        "description": "Average booking amount"
                    },
                    "top_customers": {
                        "type": "array",
                        "description": "Top customers by booking count",
                        "items": {
                            "type": "object",
                            "properties": {
                                "first_name": {
                                    "type": "string",
                                    "description": "Customer first name"
                                },
                                "last_name": {
                                    "type": "string",
                                    "description": "Customer last name"
                                },
                                "email": {
                                    "type": "string",
                                    "description": "Customer email"
                                },
                                "booking_count": {
                                    "type": "integer",
                                    "description": "Number of bookings"
                                }
                            }
                        }
                    },
                    "error": {
                        "type": "string",
                        "description": "Error message if operation failed"
                    }
                }
            }
        }
    ],
    "resources": [
        {
            "name": "booking",
            "description": "Get detailed information about a specific booking",
            "uriTemplate": "booking://{booking_id}",
            "parameters": {
                "booking_id": {
                    "type": "string",
                    "description": "The ID of the booking to retrieve"
                }
            },
            "mimeType": "application/json"
        },
        {
            "name": "customer",
            "description": "Get customer profile with booking history",
            "uriTemplate": "customer://{customer_id}",
            "parameters": {
                "customer_id": {
                    "type": "string",
                    "description": "The ID of the customer to retrieve"
                }
            },
            "mimeType": "application/json"
        }
    ],
    "prompts": [
        {
            "name": "travel_recommendation",
            "description": "Generate travel recommendations based on destination, budget, and preferences",
            "arguments": [
                {
                    "name": "destination",
                    "description": "Travel destination",
                    "required": true
                },
                {
                    "name": "budget",
                    "description": "Travel budget",
                    "required": true
                },
                {
                    "name": "travel_dates",
                    "description": "Travel dates",
                    "required": true
                },
                {
                    "name": "preferences",
                    "description": "Travel preferences",
                    "required": false
                }
            ]
        },
        {
            "name": "booking_assistance",
            "description": "Generate booking assistance prompts",
            "arguments": [
                {
                    "name": "booking_type",
                    "description": "Type of booking (hotel, flight, package)",
                    "required": true
                },
                {
                    "name": "customer_requirements",
                    "description": "Customer requirements and preferences",
                    "required": true
                }
            ]
        }
    ],
    "capabilities": {
        "tools": true,
        "resources": true,
        "prompts": true
    },
    "database": {
        "type": "SQLite",
        "path": "travel_bookings.db",
        "tables": [
            {
                "name": "customers",
                "description": "Customer information",
                "columns": [
                    "id",
                    "first_name",
                    "last_name",
                    "email",
                    "phone",
                    "created_at"
                ]
            },
            {
                "name": "hotels",
                "description": "Hotel information",
                "columns": [
                    "id",
                    "name",
                    "city",
                    "country",
                    "rating",
                    "price_per_night",
                    "amenities"
                ]
            },
            {
                "name": "flights",
                "description": "Flight information",
                "columns": [
                    "id",
                    "airline",
                    "flight_number",
                    "departure_city",
                    "arrival_city",
                    "departure_time",
                    "arrival_time",
                    "price",
                    "aircraft_type"
                ]
            },
            {
                "name": "bookings",
                "description": "Booking information",
                "columns": [
                    "id",
                    "customer_id",
                    "booking_type",
                    "hotel_id",
                    "flight_id",
                    "check_in_date",
                    "check_out_date",
                    "guests",
                    "total_amount",
                    "status",
                    "booking_date"
                ]
            }
        ]
    }
}